        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '') {
      return;
   }

   // Update result based on total grade
   var x = g_form.getValue('total_grade');

   if (x === 'A1') {
      g_form.setValue('result', 'Distinction');
   } 
   else if (['A2', 'B1', 'B2', 'C1', 'C2', 'D'].includes(x)) {
      g_form.setValue('result', 'Pass');
   } 
   else {
      g_form.setValue('result', 'Fail');
   }
}
]]></script>
