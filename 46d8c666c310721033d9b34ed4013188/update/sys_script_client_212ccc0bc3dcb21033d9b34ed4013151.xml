        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '') {
      return;
   }

   // Get average as a number
   var avg = parseFloat(g_form.getValue('average')) || 0;

   // Convert to percentage
   var percentage = avg;
   if (percentage <= 1) {  // If average is a fraction (0-1)
       percentage = avg * 100;
   }

   // Round to 2 decimal places and add % sign
   g_form.setValue('percentage', percentage.toFixed(2) + '%');
}
]]></script>
